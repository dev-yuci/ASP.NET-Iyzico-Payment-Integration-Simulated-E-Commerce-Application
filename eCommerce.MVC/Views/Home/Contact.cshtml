}
<h1>Contact Page</h1>

<h3 class="alert alert-success mt-3 text-center">Contact Us !</h3>

<div class="mt-2">
	<form asp-controller="Home" asp-action="MessageTo" method="post" enctype="multipart/form-data">
		<div class="form-group">
			<label>First Name</label>
			<input class="form-control" name="firstname" />
		</div>

		<div class="form-group">
			<label>Last Name</label>
			<input class="form-control" name="lastName" />
		</div>

		<div class="form-group mt-2">
			<label>Mail Adress</label>
			<input type="email" class="form-control" name="email" />
		</div>

		<div class="form-group">
			<label>Message</label>
			<textarea class="form-control my-custom-textarea" style="height: 130px" name="message"></textarea>
		</div>

		<div class="form-group mt-2">
			<button type="submit" class="btn btn-success w-100">Send</button>
		</div>
	</form>
</div>